<?xml version="1.0" encoding="UTF-8"?>
<Context path="/Inventory">
    <Resource 
        name="jdbc/inventory"
        auth="Container" 
        type="javax.sql.DataSource"
        maxActive="100"
        maxIdle="30"
        maxWait="10000"
        driverClassName="com.mysql.jdbc.Driver"
        url="jdbc:mysql://localhost:3309/inventory"
        username="root"
        password="password"/>
</Context>